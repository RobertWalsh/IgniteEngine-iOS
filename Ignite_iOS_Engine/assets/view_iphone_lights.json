{
	"attributes": {
		"height": "100%",
		"layout_type": "float",
		"width": "100%"
	},
	"controls": [
		{
			"attributes": {
				"height": 370,
				"images.default": "/images/iphone_background_lights_208x369.png",
				"layout_type": "float",
				"margin.top": 59,
				"visible": true,
				"width": 208
			},
			"type": "Image"
		},
		{
			"actions": [
				{
					"attributes": {
						"duration": 0,
						"id": "background_room_lights_off"
					},
					"on": "touch_up",
					"parameters": {
						"alpha": [
							{
								"if": "[[background_room_lights_off.alpha]]==0",
								"value": 1
							},
							{
								"if": "[[background_room_lights_off.alpha]]==1",
								"value": 0
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"duration": 0,
						"id": "fireplace_overlay_lightson"
					},
					"on": "touch_up",
					"parameters": {
						"alpha": [
							{
								"if": "[[fireplace_on.alpha]]==0",
								"value": 0
							},
							{
								"if": "[[background_room_lights_off.alpha]]==1 && [[fireplace_on.alpha]]==1",
								"value": 0
							},
							{
								"if": "[[background_room_lights_off.alpha]]==0 && [[fireplace_on.alpha]]==1",
								"value": 1
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"duration": 0,
						"id": "fireplace_overlay_lightsoff"
					},
					"on": "touch_up",
					"parameters": {
						"alpha": [
							{
								"if": "[[fireplace_on.alpha]]==0",
								"value": 0
							},
							{
								"if": "[[background_room_lights_off.alpha]]==0 && [[fireplace_on.alpha]]==1",
								"value": 0
							},
							{
								"if": "[[background_room_lights_off.alpha]]==1 && [[fireplace_on.alpha]]==1",
								"value": 1
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"function_name": "play",
						"id": "mediaplayer_lightswitch"
					},
					"on": "touch_up",
					"type": "Function"
				}
			],
			"attributes": {
				"color.background": "CFF602",
				"height": 100,
				"layout_type": "float",
				"margin.top": 180,
				"title.default.text": "Toggle Lights"
			},
			"type": "Button"
		},
		{
			"attributes": {
				"auto_play": false,
				"number_of_loops": 0,
				"sound_location": "/audio/light_switch_flick_008.mp3"
			},
			"id": "mediaplayer_lightswitch",
			"type": "Sound"
		}
	],
	"id": "layout_iphone_right_lights",
	"type": "Layout"
}