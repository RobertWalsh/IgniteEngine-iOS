{
  "actions": [
    {
      "attributes": {
        "delay": 2,
        "duration": 0.4,
        "id": "iphone_nest_mode"
      },
      "on": "did_load",
      "parameters": {
        "alpha": 1
      },
      "type": "Modify"
    }
  ],
  "attributes": {
    "height": "100%",
    "layout_type": "float",
    "width": "100%"
  },
  "controls": [
    {
      "actions": [],
      "attributes": {
        "height": 100,
        "images.default": [
          {
            "if": "[[knob_nest_iphone.value]] == 62",
            "value": "/images/iphone_nest_standby_100x100.png"
          },
          {
            "if": "[[knob_nest_iphone.value]] <= 60",
            "value": "/images/iphone_nest_cool_100x100.png"
          },
          {
            "if": "[[knob_nest_iphone.value]] >= 64",
            "value": "/images/iphone_nest_heat_100x100.png"
          }
        ],
        "layout_type": "float",
        "margin.bottom": 94,
        "margin.left": 90,
        "vertical_alignment": "bottom",
        "visible": true,
        "width": 100
      },
      "controls": [],
      "id": "iphone_nest_mode",
      "type": "Image"
    },
    {
      "actions": [
        {
          "attributes": {
            "id": "text_knob_wall"
          },
          "on": "value_changed",
          "type": "Refresh"
        },
        {
          "attributes": {
            "id": "iphone_nest_mode"
          },
          "on": "value_changed",
          "type": "Refresh"
        },
        {
          "attributes": {
            "function_name": "update_knob_value",
            "id": "knob_nest_wall"
          },
          "on": "value_changed",
          "parameters": {
            "animated": true,
            "value": "[[knob_nest_iphone.value]]"
          },
          "type": "Function"
        },
        {
          "attributes": {
            "delay": 0.6,
            "function_name": [
              {
                "if": "[[layout_main.margin.left]] == 0",
                "value": "start_animation"
              }
            ],
            "id": "animation_nest"
          },
          "on": "value_changed",
          "type": "Function"
        },
        {
            "attributes": {
              "function_name": "play",
              "id": "sound_car_screen_d"
            },
            "on": "touch_up",
            "type": "Function"
          }
      ],
      "attributes": {
        "color": {
          "background": "#00000000"
        },
        "height": "100%",
        "horizontal_alignment": "center",
        "images": {
          "background": "1images/knob_bg_208x208.png",
          "p1ointer": "1images/knob_marker_208x208.png"
        },
        "initial_value": 62,
        "knob_animation_duration": 1,
        "layout_type": "float",
        "margin.bottom": -4,
        "maximum_angle": 146,
        "maximum_value": 90,
        "minimum_value": 50,
        "vertical_alignment": "bottom",
        "width": "100%"
      },
      "id": "knob_nest_iphone",
      "type": "Knob"
    },
    {
      "attributes": {
        "color.text": "#FFFFFF",
        "font": "NestsansBold:32",
        "layout_type": "float",
        "enabled": false,
        "margin.top": 102,
        "margin.left": 124,
        "text": "[[knob_nest_iphone.value]]"
      },
      "id": "text_knob_wall",
      "type": "Text"
    }
  ],
  "id": "layout_iphone_left_temperature",
  "type": "Layout"
}