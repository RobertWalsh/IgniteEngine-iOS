{
	"attributes": {
		"height": "100%",
		"layout_type": "float",
		"width": "100%"
	},
	"controls": [
		{
			"attributes": {
				"height": 370,
				"images.default": "/images/iphone_background_fireplace_208x369.png",
				"layout_type": "float",
				"margin.top": 59,
				"visible": true,
				"width": 208
			},
			"type": "Image"
		},
		{
			"actions": [
				{
					"attributes": {
						"id": "button_fireplace_onoff"
					},
					"on": "touch_up",
					"parameters": {
						"images.default": [
							{
								"if": "[[fireplace_on.alpha]] == 0",
								"value": "/images/button_iphone_toggleon_52x47.png"
							},
							{
								"if": "[[fireplace_on.alpha]] == 1",
								"value": "/images/button_iphone_toggleoff_52x47.png"
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"id": "animation_fireplace"
					},
					"on": "touch_up",
					"parameters": {
						"visible": true
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"delay": 1,
						"id": "animation_fireplace"
					},
					"on": "touch_up",
					"parameters": {
						"visible": false
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"delay": [
							{
								"if": "[[fireplace_on.alpha]] == 1",
								"value": 0.75
							},
							{
								"if": "[[fireplace_on.alpha]] == 0",
								"value": 0.75
							}
						],
						"duration": 0.1,
						"id": "fireplace_on"
					},
					"on": "touch_up",
					"parameters": {
						"alpha": [
							{
								"if": "[[fireplace_on.alpha]] == 1",
								"value": 0
							},
							{
								"if": "[[fireplace_on.alpha]] == 0",
								"value": 1
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"delay": [
							{
								"if": "[[fireplace_on.alpha]] == 1",
								"value": 1
							},
							{
								"if": "[[fireplace_on.alpha]] == 0",
								"value": 1.5
							}
						],
						"duration": 0.1,
						"id": [
							{
								"if": "[[background_room_lights_off.alpha]]==0",
								"value": "fireplace_overlay_lightson"
							},
							{
								"if": "[[background_room_lights_off.alpha]]==1",
								"value": "fireplace_overlay_lightsoff"
							}
						]
					},
					"on": "touch_up",
					"parameters": {
						"alpha": [
							{
								"if": "[[fireplace_overlay_lightson.alpha]] == 1 && [[background_room_lights_off.alpha]]==0",
								"value": 0
							},
							{
								"if": "[[fireplace_overlay_lightson.alpha]] == 0 && [[background_room_lights_off.alpha]]==0",
								"value": 1
							},
							{
								"if": "[[fireplace_overlay_lightsoff.alpha]] == 1 && [[background_room_lights_off.alpha]]==1",
								"value": 0
							},
							{
								"if": "[[fireplace_overlay_lightsoff.alpha]] == 0 && [[background_room_lights_off.alpha]]==1",
								"value": 1
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"id": "mediaplayer_fireplace"
					},
					"on": "touch_up",
					"parameters": {
						"isPlaying": [
							{
								"if": "[[mediaplayer_fireplace.isPlaying]]==0",
								"value": true
							},
							{
								"if": "[[mediaplayer_fireplace.isPlaying]]==1",
								"value": false
							}
						]
					},
					"type": "Modify"
				},
				{
					"attributes": {
						"delay": [
							{
								"if": "[[mediaplayer_fireplace.isPlaying]]==1",
								"value": 1
							},
							{
								"if": "[[mediaplayer_fireplace.isPlaying]]==0",
								"value": 1.5
							}
						],
						"function_name": [
							{
								"if": "[[mediaplayer_fireplace.isPlaying]]==1",
								"value": "play"
							},
							{
								"if": "[[mediaplayer_fireplace.isPlaying]]==0",
								"value": "stop"
							}
						],
						"id": "mediaplayer_fireplace"
					},
					"on": "touch_up",
					"type": "Function"
				},
				{
					"attributes": {
						"function_name": "play",
						"id": "sound_beep"
					},
					"on": "touch_up",
					"type": "Function"
				}
			],
			"attributes": {
				"height": 47,
				"images.default": "/images/button_iphone_toggleoff_52x47.png",
				"layout_type": "float",
				"margin.left": 110,
				"margin.top": 198,
				"width": 52
			},
			"id": "button_fireplace_onoff",
			"type": "Button"
		}
	],
	"id": "layout_iphone_right_fireplace",
	"type": "Layout"
}