{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "color": {
				"background": "#FFFFFF"
			}
        },
        "controls": [
         {
            "id": "knobValueText",
            "type": "Text",
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Knob Value : [[customKnob.value]]"
            }
         },
         {
            "id": "changeValueText",
            "type": "Text",
            "actions": [{
                "on": "touch_up",
                "type": "Function",
                "attributes": {
                    "id": "customKnob",
                    "function_name": "update_knob_value"
                },
                "parameters" : {
                    "value" : 70,
                    "animated" : true
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Update Knob Value to 70"
            }
         },
         {
            "id": "customKnob",
            "type": "Knob",
            "actions": [{
                "on": "value_changed",
                "type": "Refresh",
                "attributes": {
                    "id": "knobValueText"
                }
            }],
            "attributes": {
                     "color": {
                     "background": "#000000"
                     },
                "width": 500,
                "height": 500,
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "initial_value": 69,
                "minimum_value": 60,
                "maximum_value": 80,
                "images":{
                    "background":"images/bg.png",
                    "pointer":"images/marker.png"
                }                    
            }
         }
        ]
    }
}