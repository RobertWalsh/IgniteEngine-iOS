{
  "view": {
    "attributes": {
      "height": "100%",
      "width": "100%",
      "padding.top": 100,
      "color": {
        "background": "#FFFFFF"
      }
    },
    "controls": [
      {
        "id": "knobValueText",
        "type": "Text",
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Knob Value : [[customKnob.value]]"
        }
      },
      {
        "id": "knobStatusText",
        "type": "Text",
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Knob Drag Status : Not Dragging"
        }
      },
      {
        "id": "changeValueText",
        "type": "Text",
        "actions": [
          {
            "on": "touch_up",
            "type": "Function",
            "attributes": {
              "id": "customKnob",
              "function_name": "update_knob_value"
            },
            "parameters": {
              "value": 70,
              "animated": true
            }
          }
        ],
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Update Knob Value to 70"
        }
      },
      {
        "id": "changeValueText",
        "type": "Text",
        "actions": [
        {
            "attributes": {
              "id": "customKnob"
            },
            "on": "touch_up",
            "parameters": {
              "knob_animation_duration": 0.75
            },
            "type": "Modify"
          },
          {
            "on": "touch_up",
            "type": "Function",
            "attributes": {
              "id": "customKnob",
              "function_name": "update_knob_value"
            },
            "parameters": {
              "value": 90,
              "animated": true
            }
          },
          {
            "attributes": {
              "id": "customKnob"
            },
            "on": "touch_up",
            "parameters": {
              "knob_animation_duration": 0.75
            },
            "type": "Modify"
          },
          {
            "on": "touch_up",
            "type": "Function",
            "attributes": {
              "id": "customKnob",
              "delay": 0.75,
              "function_name": "update_knob_value"
            },
            "parameters": {
              "value": 50,
              "animated": true
            }
          }
        ],
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Start Car"
        }
      },
      {
        "id": "customKnob",
        "type": "Knob",
        "actions": [
          {
            "on": "value_changed",
            "type": "Refresh",
            "attributes": {
              "id": "knobValueText"
            }
          },
          {
            "on": "touch",
            "type": "Modify",
            "attributes": {
              "id": "knobStatusText"
            },
            "parameters": {
              "text": "Knob Drag Status : Dragging"
            }
          },
          {
            "on": "touch_up",
            "type": "Modify",
            "attributes": {
              "id": "knobStatusText"
            },
            "parameters": {
              "text": "Knob Drag Status : Not Dragging"
            }
          }
        ],
        "attributes": {
          "color": {
            "background": "#00000000"
          },
          "width": 139,
          "height": 139,
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "initial_value": 50,
          "minimum_value": 50,
          "maximum_value": 90,
          "knob_animation_duration": 0.5,
          "images": {
            "pointer": "images/marker2.png"
          }
        }
      }
    ]
  }
}