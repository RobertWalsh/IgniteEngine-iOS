{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "color": {
				"background": "#FFFFFF"
			}
        },
        "controls": [
         {
            "id": "startText",
            "type": "Text",
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Wait For The Alert",
                "font": "HelveticaNeue:50"
            }
         },
         {
            "id": "timerControl",
            "type": "Timer",
            "actions": [{
                "on": "timer_fired",
                "type": "Alert",
                "attributes": {
                    "title": "Timer Fired!"
                }
            }],
            "attributes": {
                "enabled" : true,
                "repeats": true,
                "time_interval": 5
            }
         }
        ]
    }
}