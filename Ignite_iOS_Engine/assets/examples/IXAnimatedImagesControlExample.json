{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "color": {
				"background": "#000000"
			}
        },
        "controls": [
         {
            "id": "startAnimationText",
            "type": "Text",
            "actions": [{
                "on": "touch_up",
                "type": "Function",
                "attributes": {
                    "id": "animatedImageControl",
                    "function_name": "restart_animation"
                }
            }],
            "attributes": {
                     "color.text":"#FFFFFF",
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Start Animation"
            }
         },
         {
            "id": "stopAnimationText",
            "type": "Text",
            "actions": [{
                "on": "touch_up",
                "type": "Function",
                "attributes": {
                    "id": "animatedImageControl",
                    "function_name": "stop_animation"
                }
            }],
            "attributes": {
                     "color.text":"#FFFFFF",
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Stop Animation"
            }
         },
         {
            "id": "animatedImageControl",
            "type": "Image",
            "attributes": {
                "width": "100%",
                "height": "100%",
                "horizontal_alignment":"center",
                "images.default" : "images/test2.gif",
                     "gif_duration": 1,
                "auto_animate": true
            }
         }
        ]
    }
}