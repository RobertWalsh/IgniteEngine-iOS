{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "color": {
				"background": "#FFFFFF"
			}
        },
        "controls": [
         {
            "id": "startAnimationText",
            "type": "Text",
            "actions": [{
                "on": "touch_up",
                "type": "Function",
                "attributes": {
                    "id": "animatedImageControl",
                    "function_name": "start_animation"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Start Animation"
            }
         },
         {
            "id": "stopAnimationText",
            "type": "Text",
            "actions": [{
                "on": "touch_up",
                "type": "Function",
                "attributes": {
                    "id": "animatedImageControl",
                    "function_name": "stop_animation"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Stop Animation"
            }
         },
         {
            "id": "animatedImageControl",
            "type": "Image",
            "attributes": {
                "width": "100%",
                "height": "400",
                "horizontal_alignment":"center",
                "animated_images" : [
                    "assets/images/bg_01.jpg",
                    "assets/images/bg_02.jpg",
                    "assets/images/bg_03.jpg",
                    "assets/images/bg_04.jpg",
                    "assets/images/bg_05.jpg"
                ],
                "animation_duration": 2,
                "auto_animate": true
            }
         }
        ]
    }
}