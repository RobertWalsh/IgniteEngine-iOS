{
  "view": {
    "attributes": {
      "_id": "test",
        "bg.color": "[[poop.color]]",
      "status_bar_style": "dark",
        "padding.top": 70
    },
    "actions": [
      
    ],
    "controls": [                 
                 {
                 "_id": "textPoop",
                 "_type": "Text",
                 "actions": [{
                             "_type": "Alert",
                             "attributes": {
                             "title": "[[poop.color:rgb]] [[poop.colorAsRGB:hex]]"
                             },
                             "on": "touchUp"
                             }],
                 "attributes": {
                 "text": "RGB: [[poop.color:rgb]]  HEX: [[poop.colorAsRGB:hex]]",
                 "size.w": "100%",
                 "size.h": 100
                 }
                 },
                 {
                 "_id": "poop",
                 "_type": "ColorPicker",
                 "actions": [{
                             "_type": "Refresh",
                             "attributes": {
                             "_target": "$view"
                             },
                             "on": "colorUpdated"
                             }],
                 "attributes": {
                 "colorAsRGB":"[[poop.color:rgb]]",
                 "size.w": "100%",
                 "size.h": "50%"
                 }
                 }
          ]  }
}