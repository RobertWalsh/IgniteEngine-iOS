{
    "view": {
        "attributes": {
            "size.h": "100%",
            "size.w": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
        {
            "_id": "saveSignatureText",
            "_type": "Text",
            "actions": [{
                "on": "touchUp",
                "_type": "Function",
                "attributes": { "_target": "signatureControl", "functionName": "save_signature" },
                "set": { "to":"docs://signatures/my_signature.png" }
            }],
            "attributes": {
                "align.h":"center",
                "layoutType": "relative",
                "text": "Save Signature"
            }
         },
         {
            "_id": "signatureControl",
            "_type": "Signature",
            "attributes": {
                "size.h": "200",
                "size.w": "60%",
                "align.h":"center",
                "layoutType": "relative"
            },
            "actions": [{
                "on": ["success","fail"],
                "_type": "Refresh",
                "attributes": { "_target": "saveSignatureImage" }
            },{
                "on": "fail",
                "_type": "Alert",
                "attributes": { "title": "Save Signature Failed", "subtitle": "[[signatureControl.last_save_error]]" }
            },{
                "on": "success",
                "_type": "Alert",
                "attributes": { "title": "Save Signature Success" }
            }]
         },
         {
             "_id": "saveSignatureText",
             "_type": "Text",
             "attributes": {
                "margin.top":100,
                "align.h":"center",
                "layoutType": "relative",
                "text": "The following image is the saved signature.  Will update when you save signature."
             }
         },
         {
             "_id": "saveSignatureImage",
             "_type": "Image",
             "attributes": {
                 "size.h": "200",
                 "size.w": "60%",
                 "align.h":"center",
                 "layoutType": "relative",
                 "image": "docs://signatures/my_signature.png"
             }
         },
        ]
    }
}