{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 70,
      "bg.color":"#ffffff",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "IXMessage"
        }
      },
      {
        "_id": "messageTest",
        "_type": "Message",
        "actions": [
          {
            "on": "success",
            "_type": "Alert",
            "attributes": {
              "title": "Message sent!"
            }
          },
          {
            "on": "cancelled",
            "_type": "Alert",
            "attributes": {
              "title": "Message cancelled!"
            }
          }
        ],
        "attributes": {
          "message.type": "text",
          "message.to": "info@apigee.com"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "_type": "Function",
            "on": "touchUp",
            "attributes": {
              "_target": "messageTest",
              "functionName": "present.email"
            }
          }
        ],
        "attributes": {
          "size.w": 200,
          "size.h": 50,
          "color": "6c6c6c",
          "layoutType": "absolute",
          "bg.color": "cdcdcd",
          "touch.color": "6c6c6c50",
          "align.h": "center",
          "align.v": "middle",
          "touch.bg.color": "cdcdcd",
          "border.radius": 0,
          "text": "send an email."
        }
      }
    ],
    "datasources": []
  }
}