{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "bg.color": "#f8f8f8",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "IXModifyAction"
        }
      },
      {
        "_id": "layoutButtons",
        "_type": "Layout",
        "attributes": {
          "layoutType": "absolute",
          "align.h": "center",
          "align.v": "middle"
        },
        "controls": [
          {
            "_id": "button0",
            "_type": "Button",
            "actions": [
              {
                "_type": "Modify",
                "on": "touchUp",
                "enabled": true,
                "attributes": {
                  "_target": "button1"
                },
                "set": {
                  "text": "this is different."
                }
              }
            ],
            "attributes": {
              "size.w": 280,
              "size.h": 50,
              "color": "6c6c6c",
              "bg.color": "cdcdcd",
              "touch.color": "6c6c6c50",
              "touch.bg.color": "cdcdcd",
              "margin.top": 15,
              "text": "change button1 title"
            }
          },
          {
            "_id": "button0",
            "_type": "Button",
            "actions": [
              {
                "_type": "Modify",
                "on": "touchUp",
                "enabled": true,
                "attributes": {
                  "_target": "session"
                },
                "set": {
                  "title": "this uses a session var"
                }
              },
              {
                "_type": "Modify",
                "on": "touchUp",
                "enabled": true,
                "attributes": {
                  "_target": "button1"
                },
                "set": {
                  "text": "[[session.title]]"
                }
              }
            ],
            "attributes": {
              "size.w": 280,
              "size.h": 50,
              "color": "6c6c6c",
              "bg.color": "cdcdcd",
              "touch.color": "6c6c6c50",
              "touch.bg.color": "cdcdcd",
              "margin.top": 15,
              "text": "set var, change title"
            }
          },
          {
            "_id": "button1",
            "_type": "Button",
            "actions": [
              {
                "_type": "Alert",
                "on": "touchUp",
                "enabled": true,
                "attributes": {
                  "title": "[[$self._id]]",
                  "message": "[[$self.text]]"
                }
              }
            ],
            "attributes": {
              "size.w": 280,
              "size.h": 50,
              "color": "6c6c6c",
              "bg.color": "cdcdcd",
              "touch.color": "6c6c6c50",
              "touch.bg.color": "cdcdcd",
              "margin.top": 15,
              "text": "button1 title"
            }
          }
        ]
      }
    ],
    "datasources": []
  }
}