{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 70,
      "bg.color":"#ffffff",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "IXSoundRecorder"
        }
      },
      {
        "_id": "soundRecorderTest",
        "_type": "SoundRecorder",
        "actions": [
          {
            "on": "finished",
            "_type": "Alert",
            "attributes": {
              "title": "Finished",
              "message": "Recorded sound: [[$self.record_to_location]]"
            }
          }
        ],
        "attributes": {
          "record_to_location": "docs://recording.mp3"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "_type": "Function",
            "on": "touchUp",
            "attributes": {
              "_target": "soundRecorderTest",
              "functionName": "start_recording"
            }
          }
        ],
        "attributes": {
          "size.w": 200,
          "size.h": 50,
          "color": "6c6c6c",
          "layoutType": "absolute",
          "bg.color": "cdcdcd",
          "touch.color": "6c6c6c50",
          "align.h": "center",
          "align.v": "middle",
          "touch.bg.color": "cdcdcd",
          "border.radius": 0,
          "text": "Say something nice."
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "_type": "Function",
            "on": "touchUp",
            "attributes": {
              "_target": "soundRecorderTest",
              "functionName": "start_recording"
            }
          }
        ],
        "attributes": {
          "size.w": 200,
          "size.h": 50,
          "color": "6c6c6c",
          "layoutType": "absolute",
          "bg.color": "cdcdcd",
          "touch.color": "6c6c6c50",
          "align.h": "center",
          "align.v": "bottom",
          "margin.bottom":200,
          "touch.bg.color": "cdcdcd",
          "border.radius": 0,
          "text": "Stop recording."
        }
      },
      {
        "_id": "title",
        "_type": "Text",
        "attributes": {
          "size.w": 280,
          "size.h": 50,
          "margin.bottom": 15,
          "color": "6c6c6c",
          "layoutType": "float",
          "text.align": "center",
          "align.h": "center",
          "align.v": "bottom",
          "font": "HelveticaNeue:15",
          "text": "IXSoundRecorder"
        }
      }
    ],
    "datasources": []
  }
}