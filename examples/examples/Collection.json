{
  "view": {
    "actions": [],
    "attributes": {
      "_id": "test",
      "bg.color":"#ffffff",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "TableView Example"
        }
      },
      {
        "_id": "tableSettings",
        "_type": "TableView",
        "attributes": {
          "size.h": "100%",
          "separator.style": "none",
          "dataprovider_id": "test_data",
          "datarow.basepath":"",
          "enabled": true,
          "fill_remaining_size.w": true,
          "margin.top": 70,
          "item_size.h": 50,
          "item_size.w": "100%",
          "bg.color":"00ff00"
        },
        "controls": [
          {
            "_type": "Layout",
            "actions": [
              {
                "_type": "Alert",
                "attributes": {
                  "title": "You touched: [[dataRow.name]] ([[dataRow.abbreviation]])"
                },
                "enabled": false,
                "on": "touchUp"
              },
              {
                "_type": "Navigate",
                "attributes": {
                  "to": "Social.json",
                  "nav_stack_type":"push",
                  "nav_animation_type":"cross_dissolve",
                  "nav_animation_duration":0
                },
                "enabled": true,
                "on": "touchUp"
              }
            ],
            "attributes": {
              "layoutFlow": "horizontal",
              "layoutType": "absolute",
              "align.v": "middle"
            },
            "controls": [
              {
                "_type": "Text",
                "attributes": {
                  "font": "HelveticaNeue-Light:22",
                  "color": "#6c6c6c",
                  "margin.left": 20,
                  "text": "[[dataRow.name]]"
                }
              },
              {
                "_type": "Text",
                "attributes": {
                  "font": "HelveticaNeue-Light:22",
                  "color": "#6c6c6c",
                  "margin.left": 5,
                  "text": "([[dataRow.abbreviation]])"
                }
              }
            ]
          },
          {
            "_type": "Image",
            "attributes": {
              "align.h": "right",
              "layoutType": "absolute",
              "size.w": 50,
              "size.h": 50,
              "image": "../images/btn_chevron_50x50.png"
            }
          },
          {
            "_type": "Layout",
            "attributes": {
              "size.h": 1,
              "size.w": "100%",
              "layoutType": "float",
              "align.v": "bottom",
              "bg.color": "#cdcdcd"
            }
          }
        ]
      }
    ]
  }
}