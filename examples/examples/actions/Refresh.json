{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#f8f8f8",
            "padding.top": 90,
            "statusBar.style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control.url": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXRefresh"
                }
            },
            {
                "_id": "layoutButtons",
                "_type": "Layout",
                "attributes": {
                    "align.h": "center",
                    "align.v": "middle",
                    "layoutType": "absolute"
                },
                "controls": [
                    {
                        "_id": "button0",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Refresh",
                                "attributes": {
                                    "_target": "button1"
                                },
                                "enabled": true,
                                "on": "touchUp"
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 280,
                            "text": "refresh button1 text",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    },
                    {
                        "_id": "button1",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Alert",
                                "attributes": {
                                    "message": "[[$self.text]]",
                                    "title": "[[$self._id]]"
                                },
                                "enabled": true,
                                "on": "touchUp"
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 280,
                            "text": "random #: [[app:randomNumber(1000)]]",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    }
                ]
            }
        ],
        "datasources": []
    }
}