{
    "view": {
        "attributes": {
            "_id": "test", 
            "background": {}, 
            "status_bar_style": "dark"
        }, 
        "controls": [
            {
                "_id": "customHeader", 
                "_type": "Custom", 
                "attributes": {
                    "control_location": "custom/header.json", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "imageTest", 
                "_type": "Image", 
                "actions": [
                    {
                        "_type": "Alert", 
                        "attributes": {
                            "message": "Sized to [[$self.actual.width]]pt x [[$self.actual.height]]pt."
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "middle", 
                    "blur.radius": 20, 
                    "color": "6c6c6c", 
                    "image": "/images/bgs/storage_wars.jpg", 
                    "layoutType": "absolute", 
                    "max.w": "100%"
                }
            }, 
            {
                "_id": "title", 
                "_type": "Text", 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "bottom", 
                    "color": "6c6c6c", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%", 
                    "text.align": "center"
                }
            }
        ], 
        "data_providers": []
    }
}