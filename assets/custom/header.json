{
  "view": {
    "attributes": {
      "height": "100%",
      "layout_type": "float",
      "width": "100%"
    },
    "actions": [],
    "controls": [
      {
        "_id": "layoutHeader",
        "_type": "Layout",
        "attributes": {
          "width": "100%",
          "height": 50,
          "layout_type": "float"
        },
        "controls": [
          {
            "_type": "Text",
            "attributes": {
              "text.color": "#6c6c6c",
              "width": "100%",
              "layout_type": "absolute",
              "vertical_alignment": "middle",
              "text.alignment": "center",
              "text": "[[$custom.title]]"
            }
          },
          {
            "_id": "imageMenu",
            "_type": "Image",
            "actions": [
              {
                "_type": "Function",
                "attributes": {
                  "_target": "app",
                  "function_name": "drawer.toggle.left"
                },
                "on": "touch_up"
              },
              {
                "_type": "Function",
                "on": "touch_up",
                "attributes": {
                  "_target": "TextInput",
                  "function_name": "keyboard_hide"
                }
              }
            ],
            "attributes": {
              "layout_type": "absolute",
              "height": 50,
              "width": 50,
              "images.default": "../images/btn_menu_50x50.png"
            }
          }
        ]
      },
      {
        "_type": "Layout",
        "attributes": {
          "height": 1,
          "margin.top": 49,
          "layout_type": "float",
          "width": "100%",
          "background.color": "#cdcdcd"
        }
      }
    ]
  }
}