{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "background.color": "#f8f8f8",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "custom/header.json",
          "layout_type": "float",
          "height": 50,
          "width": "100%",
          "margin.top": 20,
          "title": "Variable Shortcodes"
        }
      },
      {
        "_id": "layoutMain",
        "_type": "Layout",
        "attributes": {
          "padding": 15,
          "width": "100%",
          "height": "100%"
        },
        "controls": [
          {
            "_id": "layoutUrlEncode",
            "_type": "Layout",
            "attributes": {
              "horizontal_alignment":"center"
            },
            "controls": [
              {
                "_id": "textToUrlEncode",
                "_type": "Text",
                "attributes": {
                  "font": "HelveticaNeue:15",
                  "text.color": "#000000",
                  "text": "[[$self.string]]",
                  "text.alignment": "center",
                  "string": "This is a string.",
                  "width": "100%"
                }
              },
              {
                "_id": "button",
                "_type": "Button",
                "actions": [
                  {
                    "_type": "Modify",
                    "on": "touch_up",
                    "attributes": {
                      "_target": "textToUrlEncode"
                    },
                    "set": {
                      "text": "[[textToUrlEncode.string:base64.encode]]"
                    }
                  }
                ],
                "attributes": {
                  "width": 200,
                  "height": 50,
                  "text.color": "6c6c6c",
                  "background.color": "cdcdcd",
                  "touch.text.color": "6c6c6c50",
                  "horizontal_alignment": "center",
                  "touch.background.color": "cdcdcd",
                  "margin.top": 10,
                  "text": "URL Encode"
                }
              },
              {
                "_id": "button",
                "_type": "Button",
                "actions": [
                  {
                    "_type": "Modify",
                    "on": "touch_up",
                    "attributes": {
                      "_target": "textToUrlEncode"
                    },
                    "set": {
                      "text": "[[textToUrlEncode.text:base64.decode]]"
                    }
                  }
                ],
                "attributes": {
                  "width": 200,
                  "height": 50,
                  "margin.top": 10,
                  "text.color": "6c6c6c",
                  "background.color": "cdcdcd",
                  "touch.text.color": "6c6c6c50",
                  "horizontal_alignment": "center",
                  "touch.background.color": "cdcdcd",
                  "text": "URL Decode"
                }
              }
            ]
          }
        ]
      }
    ],
    "data_providers": []
  }
}