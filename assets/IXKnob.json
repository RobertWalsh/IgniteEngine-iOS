{
    "view": {
        "attributes": {
            "_id": "test", 
            "background": {}, 
            "status_bar_style": "dark"
        }, 
        "controls": [
            {
                "_id": "customHeader", 
                "_type": "Custom", 
                "attributes": {
                    "control_location": "custom/header.json", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "customKnob", 
                "_type": "Knob", 
                "actions": [
                    {
                        "_type": "Refresh", 
                        "attributes": {
                            "_target": "knobValue"
                        }, 
                        "on": "value_changed"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "animation.duration": 0.5, 
                    "images": {
                        "background": "images/bg.png", 
                        "pointer": "images/marker.png"
                    }, 
                    "layoutType": "relative", 
                    "size.h": 250, 
                    "size.w": 250, 
                    "value.default": 0, 
                    "value.max": 100, 
                    "value.min": 0
                }
            }, 
            {
                "_id": "knobValue", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "customKnob", 
                            "function_name": "update_knob_value"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animated": true
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "bg.color": "cdcdcd", 
                    "color": "6c6c6c", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "customKnob", 
                            "function_name": "update_knob_value"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animated": true
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "bg.color": "cdcdcd", 
                    "color": "6c6c6c", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "customKnob", 
                            "function_name": "update_knob_value"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animated": true
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "bg.color": "cdcdcd", 
                    "color": "6c6c6c", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }
        ], 
        "data_providers": []
    }
}