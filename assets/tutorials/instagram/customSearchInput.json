{
    "view": {
        "controls": [
            {
                "_id": "layoutSearch", 
                "_type": "Layout", 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "middle", 
                    "layoutFlow": "horizontal", 
                    "layoutType": "absolute", 
                    "size.h": 38, 
                    "size.w": "100%"
                }, 
                "controls": [
                    {
                        "_id": "inputSearch", 
                        "_type": "TextInput", 
                        "actions": [
                            {
                                "_type": "Modify", 
                                "attributes": {
                                    "_target": "session"
                                }, 
                                "on": "text_changed", 
                                "set": {
                                    "query": "[[$self.text]]"
                                }
                            }, 
                            {
                                "_type": "Refresh", 
                                "attributes": {
                                    "_target": "dataInstagram"
                                }, 
                                "on": "return_key_pressed,"
                            }
                        ], 
                        "attributes": {
                            "bg.color": "#ffffff", 
                            "clearOnFocus.enabled": true, 
                            "placeholder.text": "Search Instagram for..", 
                            "size.h": "100%", 
                            "size.w": 257
                        }
                    }, 
                    {
                        "_id": "imageSearch", 
                        "_type": "Image", 
                        "actions": [
                            {
                                "_type": "Refresh", 
                                "attributes": {
                                    "_target": "dataInstagram", 
                                    "repeat_delay": 0.34
                                }, 
                                "on": "touch_up"
                            }, 
                            {
                                "_type": "Function", 
                                "attributes": {
                                    "_target": "inputSearch", 
                                    "function_name": "keyboard_hide"
                                }, 
                                "on": "touch_up"
                            }
                        ], 
                        "attributes": {
                            "image": "./images/btn_search_55x38.png", 
                            "size.h": 38, 
                            "size.w": 55
                        }
                    }
                ]
            }
        ]
    }
}