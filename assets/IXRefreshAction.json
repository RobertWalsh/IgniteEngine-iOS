{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "background": {
        "color": "#f8f8f8"
      },
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "custom/header.json",
          "layout_type": "float",
          "height": 50,
          "width": "100%",
          "margin.top": 20,
          "title": "IXRefreshAction"
        }
      },
      {
        "_id": "layoutButtons",
        "_type": "Layout",
        "attributes": {
          "layout_type": "absolute",
          "horizontal_alignment": "center",
          "vertical_alignment": "middle"
        },
        "controls": [
          {
            "_id": "button0",
            "_type": "Button",
            "actions": [
              {
                "_type": "Refresh",
                "on": "touch_up",
                "enabled": true,
                "attributes": {
                  "_target": "button1"
                }
              }
            ],
            "attributes": {
              "width": 280,
              "height": 50,
              "text.color": "6c6c6c",
              "background.color": "cdcdcd",
              "touch.text.color": "6c6c6c50",
              "touch.background.color": "cdcdcd",
              "margin.top": 15,
              "text": "refresh button1 text"
            }
          },
          {
            "_id": "button1",
            "_type": "Button",
            "actions": [
              {
                "_type": "Alert",
                "on": "touch_up",
                "enabled": true,
                "attributes": {
                  "title": "[[$self._id]]",
                  "message": "[[$self.text]]"
                }
              }
            ],
            "attributes": {
              "width": 280,
              "height": 50,
              "text.color": "6c6c6c",
              "background.color": "cdcdcd",
              "touch.text.color": "6c6c6c50",
              "touch.background.color": "cdcdcd",
              "margin.top": 15,
              "text": "random #: [[app:random_number(1000)]]"
            }
          }
        ]
      }
    ],
    "data_providers": []
  }
}