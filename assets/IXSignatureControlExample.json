{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
        {
            "_id": "saveSignatureText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": { "_target": "signatureControl", "function_name": "save_signature" },
                "set": { "to":"docs://signatures/my_signature.png" }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Save Signature"
            }
         },
         {
            "_id": "signatureControl",
            "_type": "Signature",
            "attributes": {
                "height": "200",
                "width": "60%",
                "horizontal_alignment":"center",
                "layout_type": "relative"
            },
            "actions": [{
                "on": ["success","fail"],
                "_type": "Refresh",
                "attributes": { "_target": "saveSignatureImage" }
            },{
                "on": "fail",
                "_type": "Alert",
                "attributes": { "title": "Save Signature Failed", "subtitle": "[[signatureControl.last_save_error]]" }
            },{
                "on": "success",
                "_type": "Alert",
                "attributes": { "title": "Save Signature Success" }
            }]
         },
         {
             "_id": "saveSignatureText",
             "_type": "Text",
             "attributes": {
                "margin.top":100,
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "The following image is the saved signature.  Will update when you save signature."
             }
         },
         {
             "_id": "saveSignatureImage",
             "_type": "Image",
             "attributes": {
                 "height": "200",
                 "width": "60%",
                 "horizontal_alignment":"center",
                 "layout_type": "relative",
                 "images.default": "docs://signatures/my_signature.png"
             }
         },
        ]
    }
}