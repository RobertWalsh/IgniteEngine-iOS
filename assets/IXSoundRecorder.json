{
    "view": {
        "attributes": {
            "_id": "test", 
            "background": {}, 
            "status_bar_style": "dark"
        }, 
        "controls": [
            {
                "_id": "customHeader", 
                "_type": "Custom", 
                "attributes": {
                    "control_location": "custom/header.json", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "soundRecorderTest", 
                "_type": "SoundRecorder", 
                "actions": [
                    {
                        "_type": "Alert", 
                        "attributes": {
                            "message": "Recorded sound: [[$self.record_to_location]]"
                        }, 
                        "on": "finished"
                    }
                ], 
                "attributes": {
                    "savePath": "docs://recording.mp3"
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundRecorderTest", 
                            "function_name": "start_recording"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "middle", 
                    "bg.color": "cdcdcd", 
                    "color": "6c6c6c", 
                    "layoutType": "absolute", 
                    "size.h": 50, 
                    "size.w": 200, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundRecorderTest", 
                            "function_name": "start_recording"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "bottom", 
                    "bg.color": "cdcdcd", 
                    "color": "6c6c6c", 
                    "layoutType": "absolute", 
                    "size.h": 50, 
                    "size.w": 200, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }, 
            {
                "_id": "title", 
                "_type": "Text", 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "bottom", 
                    "color": "6c6c6c", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "text.align": "center"
                }
            }
        ], 
        "data_providers": []
    }
}