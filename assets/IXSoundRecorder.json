{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 70,
      "background": {
        "color": "#ffffff"
      },
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "custom/header.json",
          "layout_type": "float",
          "height": 50,
          "width": "100%",
          "margin.top": 20,
          "title": "IXSoundRecorder"
        }
      },
      {
        "_id": "soundRecorderTest",
        "_type": "SoundRecorder",
        "actions": [
          {
            "on": "finished",
            "_type": "Alert",
            "attributes": {
              "title": "Finished",
              "message": "Recorded sound: [[$self.record_to_location]]"
            }
          }
        ],
        "attributes": {
          "record_to_location": "docs://recording.mp3"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "_type": "Function",
            "on": "touch_up",
            "attributes": {
              "_target": "soundRecorderTest",
              "function_name": "start_recording"
            }
          }
        ],
        "attributes": {
          "width": 200,
          "height": 50,
          "text.color": "6c6c6c",
          "layout_type": "absolute",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "vertical_alignment": "middle",
          "touch.background.color": "cdcdcd",
          "border.radius": 0,
          "text": "Say something nice."
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "_type": "Function",
            "on": "touch_up",
            "attributes": {
              "_target": "soundRecorderTest",
              "function_name": "start_recording"
            }
          }
        ],
        "attributes": {
          "width": 200,
          "height": 50,
          "text.color": "6c6c6c",
          "layout_type": "absolute",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "vertical_alignment": "bottom",
          "margin.bottom":200,
          "touch.background.color": "cdcdcd",
          "border.radius": 0,
          "text": "Stop recording."
        }
      },
      {
        "_id": "title",
        "_type": "Text",
        "attributes": {
          "width": 280,
          "height": 50,
          "margin.bottom": 15,
          "text.color": "6c6c6c",
          "layout_type": "float",
          "text.alignment": "center",
          "horizontal_alignment": "center",
          "vertical_alignment": "bottom",
          "font": "HelveticaNeue:15",
          "text": "IXSoundRecorder"
        }
      }
    ],
    "data_providers": []
  }
}