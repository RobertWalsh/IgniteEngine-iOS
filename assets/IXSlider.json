{
    "view": {
        "attributes": {
            "_id": "test", 
            "background": {}, 
            "status_bar_style": "dark"
        }, 
        "controls": [
            {
                "_id": "customHeader", 
                "_type": "Custom", 
                "attributes": {
                    "control_location": "custom/header.json", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "sliderTest", 
                "_type": "Slider", 
                "actions": [
                    {
                        "_type": "Refresh", 
                        "attributes": {
                            "_target": "title"
                        }, 
                        "on": "value_changed"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "middle", 
                    "layoutType": "absolute", 
                    "size.w": 280
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "sliderTest", 
                            "function_name": "update_slider_value"
                        }, 
                        "on": "touch_up", 
                        "set": {}
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "bottom", 
                    "bg.color": "cdcdcd", 
                    "color": "6c6c6c", 
                    "layoutType": "absolute", 
                    "size.h": 50, 
                    "size.w": 225, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }, 
            {
                "_id": "title", 
                "_type": "Text", 
                "attributes": {
                    "align.h": "center", 
                    "align.v": "bottom", 
                    "color": "6c6c6c", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": 200
                }
            }
        ], 
        "data_providers": []
    }
}