{
    "view": {
        "actions": [
            {
                "_type": "Function", 
                "attributes": {
                    "_target": "TextInput", 
                    "function_name": "keyboard_show"
                }, 
                "on": "did_appear"
            }
        ], 
        "attributes": {
            "_id": "test", 
            "background": {}, 
            "status_bar_style": "dark"
        }, 
        "controls": [
            {
                "_id": "customHeader", 
                "_type": "Custom", 
                "attributes": {
                    "control_location": "custom/header.json", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "TextInput", 
                "_type": "TextInput", 
                "actions": [
                    {
                        "_type": "Modify", 
                        "attributes": {
                            "_target": "session"
                        }, 
                        "on": "text_changed,got_focus", 
                        "set": {
                            "text_to_speak": "[[$self.text]]"
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "color": "#6c6c6c", 
                    "multiline.enabled": true, 
                    "placeholder.text": "Type something..", 
                    "size.h": 120, 
                    "size.w": 280, 
                    "text.align": "center", 
                    "text.default": "How much wood could a woodchuck chuck if a woodchuck could chuck wood ?"
                }
            }, 
            {
                "_id": "customSlider", 
                "_type": "Slider", 
                "actions": [
                    {
                        "_type": "Refresh", 
                        "attributes": {
                            "_target": "button"
                        }, 
                        "on": "value_changed"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "size.w": 280, 
                    "value.default": 0.3, 
                    "value.max": 1, 
                    "value.min": 0
                }
            }, 
            {
                "_id": "speechTest", 
                "_type": "Speech", 
                "attributes": {}
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Modify", 
                        "attributes": {
                            "_target": "session"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "text_to_speak": "[[TextInput.text]]"
                        }
                    }, 
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "speechTest", 
                            "function_name": "queue_utterance"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "rate": "[[customSlider.value]]", 
                            "sentences": "[[session.text_to_speak]]"
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "bg.color": "cdcdcd", 
                    "border.size": 2, 
                    "color": "6c6c6c", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }
        ], 
        "data_providers": []
    }
}