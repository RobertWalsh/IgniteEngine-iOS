{
    "view": {
        "attributes": {
            "background": {}, 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "playText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundControl", 
                            "function_name": "play"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "pauseText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundControl", 
                            "function_name": "pause"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "stopText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundControl", 
                            "function_name": "stop"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "soundControl", 
                "_type": "Sound", 
                "actions": [
                    {
                        "_type": "Alert", 
                        "attributes": {}, 
                        "on": "finished"
                    }
                ], 
                "attributes": {
                    "audioUrl": "http://www.zultys.com/phone_sounds/Gong1.wav", 
                    "autoPlay.enabled": false, 
                    "repeatCount": 0
                }
            }
        ]
    }
}