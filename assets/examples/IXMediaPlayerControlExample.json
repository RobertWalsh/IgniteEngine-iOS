{
    "view": {
        "attributes": {
            "background": {}, 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "playText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "mediaPlayerControl", 
                            "function_name": "play"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "pauseText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "mediaPlayerControl", 
                            "function_name": "pause"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "stopText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "mediaPlayerControl", 
                            "function_name": "goto"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "seconds": 30
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "stopText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "mediaPlayerControl", 
                            "function_name": "stop"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "mediaPlayerControl", 
                "_type": "MediaPlayer", 
                "attributes": {
                    "align.h": "center", 
                    "autoPlay.enabled": false, 
                    "bar": {
                        "size.h": 50
                    }, 
                    "controls": "embedded", 
                    "layoutType": "relative", 
                    "size.h": 132, 
                    "size.w": 236, 
                    "videoUrl": "/videos/tv_skating_video.mp4"
                }
            }
        ]
    }
}