{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
         {
            "_id": "playText",
            "_type": "Text",
            "actions": [{
                    "on": "touch_up",
                    "_type": "Function",
                    "attributes": {
                        "_target": "mediaPlayerControl",
                        "function_name": "play"
                    }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Play Movie"
            }
         },
         {
            "_id": "pauseText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "mediaPlayerControl",
                    "function_name": "pause"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Pause Movie"
            }
         },
         {
            "_id": "stopText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "mediaPlayerControl",
                    "function_name": "goto"
                },
                "set":{
                    "seconds":30
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Go To 30 seconds in Movie"
            }
         },
         {
            "_id": "stopText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "mediaPlayerControl",
                    "function_name": "stop"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Stop Movie"
            }
         },
         {
            "_id": "mediaPlayerControl",
            "_type": "MediaPlayer",
            "attributes": {
                "width": 236,
                "height": 132,
                "layout_type": "relative",
                "horizontal_alignment":"center",
                "video": "/videos/tv_skating_video.mp4",
                "controls": "embedded",
                "bar": {
                    "height": 50,
                    "color": "#00FF0050"
                },
                "auto_play": false
            }
         }
        ]
    }
}