{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "background": {
        "color": "#ffffff"
      },
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "custom/header.json",
          "layout_type": "float",
          "height": 50,
          "width": "100%",
          "margin.top": 20,
          "title": "Knob Example"
        }
      },
      {
        "_id": "customKnob",
        "_type": "Knob",
        "actions": [
          {
            "_type": "Refresh",
            "on": "value_changed",
            "attributes": {
              "_target": "knobValueText"
            }
          },
          {
        "_type": "Refresh",
        "attributes": {
          "_target": "knobValue"
        },
        "enabled":true,
        "on": "value_changed"
      },
          {
            "_type": "Modify",
            "on": "touch",
            "attributes": {
              "_target": "knobStatusText"
            },
            "set": {
              "text": "Knob Drag Status : Dragging"
            }
          },
          {
            "_type": "Modify",
            "on": "touch_up",
            "attributes": {
              "_target": "knobStatusText"
            },
            "set": {
              "text": "Knob Drag Status : Not Dragging"
            }
          }
        ],
        "attributes": {
          "color": {
            "background": "#00000000"
          },
          "width": 250,
          "height": 250,
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "initial_value": 0,
          "minimum_value": 0,
          "maximum_value": 100,
          "knob_animation_duration": 0.5,
          "images": {
            "pointer": "images/marker.png",
            "background": "images/bg.png"
          }
        }
      },
      {
        "_id": "knobValue",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "customKnob",
              "function_name": "update_knob_value"
            },
            "set": {
              "value": 0,
              "animated": true
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Knob Value: [[customKnob.value]]"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "customKnob",
              "function_name": "update_knob_value"
            },
            "set": {
              "value": 50,
              "animated": true
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Change Knob Value: 50"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "customKnob",
              "function_name": "update_knob_value"
            },
            "set": {
              "value": 100,
              "animated": true
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Change Knob Value: 100"
        }
      }
    ],
    "data_providers": []
  }
}