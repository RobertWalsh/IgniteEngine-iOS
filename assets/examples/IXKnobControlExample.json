{
  "view": {
    "attributes": {
      "height": "100%",
      "width": "100%",
      "padding.top": 100,
      "background": {
        "color": "#FFFFFF"
      }
    },
    "controls": [
      {
        "_id": "knobValueText",
        "_type": "Text",
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Knob Value : [[customKnob.value]]"
        }
      },
      {
        "_id": "knobStatusText",
        "_type": "Text",
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Knob Drag Status : Not Dragging"
        }
      },
      {
        "_id": "changeValueText",
        "_type": "Text",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "customKnob",
              "function_name": "update_knob_value"
            },
            "set": {
              "value": 70,
              "animated": true
            }
          }
        ],
        "attributes": {
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "text": "Update Knob Value to 70"
        }
      },
      {
        "_id": "changeValueText",
        "_type": "Text",
        "attributes": {
            "horizontal_alignment": "center",
            "layout_type": "relative",
            "text": "Start Car"
        },
        "actions": [{
            "_type": "Modify",
            "on": "touch_up",
            "attributes": { "_target": "customKnob" },
            "set": { "knob_animation_duration": 0.75 }
          },{
            "_type": "Function",
            "on": "touch_up",
            "attributes": { "_target": "customKnob", "function_name": "update_knob_value" },
            "set": { "value": 90, "animated": true }
          },{
            "_type": "Function",
            "on": "touch_up",
            "attributes": { "delay": 0.75, "_target": "customKnob", "function_name": "update_knob_value" },
            "set": { "value": 50, "animated": true }
          }]
      },
      {
        "_id": "customKnob",
        "_type": "Knob",
        "actions": [{
            "_type": "Refresh",
            "on": "value_changed",
            "attributes": { "_target": "knobValueText" }
          }, {
            "_type": "Modify",
            "on": "touch",
            "attributes": { "_target": "knobStatusText" },
            "set": { "text": "Knob Drag Status : Dragging" }
          },{
            "_type": "Modify",
            "on": "touch_up",
            "attributes": { "_target": "knobStatusText" },
            "set": { "text": "Knob Drag Status : Not Dragging" }
        }],
        "attributes": {
          "color": {
            "background": "#00000000"
          },
          "width": 139,
          "height": 139,
          "horizontal_alignment": "center",
          "layout_type": "relative",
          "initial_value": 50,
          "minimum_value": 50,
          "maximum_value": 90,
          "knob_animation_duration": 0.5,
          "images": {
            "pointer": "images/marker2.png"
          }
        }
      }
    ]
  }
}