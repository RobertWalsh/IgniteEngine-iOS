{
    "view": {
        "attributes": {
            "background": {}, 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "knobValueText", 
                "_type": "Text", 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "knobStatusText", 
                "_type": "Text", 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "changeValueText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "customKnob", 
                            "function_name": "update_knob_value"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animated": true
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "changeValueText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Modify", 
                        "attributes": {
                            "_target": "customKnob"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animation.duration": 0.75
                        }
                    }, 
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "customKnob", 
                            "function_name": "update_knob_value"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animated": true
                        }
                    }, 
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "customKnob", 
                            "delay": 0.75, 
                            "function_name": "update_knob_value"
                        }, 
                        "on": "touch_up", 
                        "set": {
                            "animated": true
                        }
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "customKnob", 
                "_type": "Knob", 
                "actions": [
                    {
                        "_type": "Refresh", 
                        "attributes": {
                            "_target": "knobValueText"
                        }, 
                        "on": "value_changed"
                    }, 
                    {
                        "_type": "Modify", 
                        "attributes": {
                            "_target": "knobStatusText"
                        }, 
                        "on": "touch", 
                        "set": {}
                    }, 
                    {
                        "_type": "Modify", 
                        "attributes": {
                            "_target": "knobStatusText"
                        }, 
                        "on": "touch_up", 
                        "set": {}
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "animation.duration": 0.5, 
                    "images": {
                        "pointer": "images/marker2.png"
                    }, 
                    "layoutType": "relative", 
                    "size.h": 139, 
                    "size.w": 139, 
                    "value.default": 50, 
                    "value.max": 90, 
                    "value.min": 50
                }
            }
        ]
    }
}