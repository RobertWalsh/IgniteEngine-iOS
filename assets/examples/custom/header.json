{
    "view": {
        "actions": [], 
        "attributes": {
            "layoutType": "float", 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "layoutHeader", 
                "_type": "Layout", 
                "attributes": {
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }, 
                "controls": [
                    {
                        "_type": "Text", 
                        "attributes": {
                            "align.v": "middle", 
                            "color": "#6c6c6c", 
                            "layoutType": "absolute", 
                            "size.w": "100%", 
                            "text.align": "center"
                        }
                    }, 
                    {
                        "_id": "imageMenu", 
                        "_type": "Image", 
                        "actions": [
                            {
                                "_type": "Function", 
                                "attributes": {
                                    "_target": "app", 
                                    "function_name": "drawer.toggle.left"
                                }, 
                                "on": "touch_up"
                            }, 
                            {
                                "_type": "Function", 
                                "attributes": {
                                    "_target": "TextInput", 
                                    "function_name": "keyboard_hide"
                                }, 
                                "on": "touch_up"
                            }
                        ], 
                        "attributes": {
                            "image": "../../images/btn_menu_50x50.png", 
                            "layoutType": "absolute", 
                            "size.h": 50, 
                            "size.w": 50
                        }
                    }
                ]
            }, 
            {
                "_type": "Layout", 
                "attributes": {
                    "bg.color": "#cdcdcd", 
                    "layoutType": "float", 
                    "size.h": 1, 
                    "size.w": "100%"
                }
            }
        ]
    }
}