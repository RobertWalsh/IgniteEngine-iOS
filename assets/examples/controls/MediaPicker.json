{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#ffffff",
            "padding.top": 70,
            "statusBar.style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control_location": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXMediaPicker"
                }
            },
            {
                "_id": "mediaPickerTest",
                "_type": "MediaPicker",
                "actions": [
                    {
                        "_type": "Alert",
                        "attributes": {
                            "title": "Loaded media at [[$self.selectedMedia]]"
                        },
                        "on": "didLoadMedia"
                    }
                ],
                "attributes": {
                    "camera": "front",
                    "cameraControls.enabled": true,
                    "source": "library"
                }
            },
            {
                "_id": "button",
                "_type": "Button",
                "actions": [
                    {
                        "_type": "Function",
                        "attributes": {
                            "_target": "mediaPickerTest",
                            "functionName": "present"
                        },
                        "on": "touchUp"
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "align.v": "middle",
                    "bg.color": "cdcdcd",
                    "border.radius": 0,
                    "color": "6c6c6c",
                    "layoutType": "absolute",
                    "size.h": 50,
                    "size.w": 200,
                    "text": "Pick something.",
                    "touch.bg.color": "cdcdcd",
                    "touch.color": "6c6c6c50"
                }
            },
            {
                "_id": "title",
                "_type": "Text",
                "attributes": {
                    "align.h": "center",
                    "align.v": "bottom",
                    "color": "6c6c6c",
                    "font": "HelveticaNeue:15",
                    "layoutType": "float",
                    "margin.bottom": 15,
                    "size.h": 50,
                    "size.w": 200,
                    "text": "IXMediaPicker: Library",
                    "text.align": "center"
                }
            }
        ],
        "datasources": []
    }
}