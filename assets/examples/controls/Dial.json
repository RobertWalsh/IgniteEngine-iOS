{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#ffffff",
            "padding.top": 90,
            "status_bar_style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control_location": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXDial"
                }
            },
            {
                "_id": "customDial",
                "_type": "Dial",
                "actions": [
                    {
                        "_type": "Refresh",
                        "attributes": {
                            "_target": "dialValue"
                        },
                        "enabled": true,
                        "on": "valueChanged"
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "animation.duration": 0.5,
                    "bg.image": "images/bg.png",
                    "bg.color": "#00000000",
                    "layoutType": "relative",
                    "pointer.image": "images/marker.png",
                    "size.h": 250,
                    "size.w": 250,
                    "value.default": 0,
                    "value.max": 100,
                    "value.min": 0
                }
            },
            {
                "_id": "dialValue",
                "_type": "Button",
                "actions": [
                    {
                        "_type": "Function",
                        "attributes": {
                            "_target": "customDial",
                            "functionName": "setValue"
                        },
                        "on": "touchUp",
                        "set": {
                            "animated": true,
                            "value": 0
                        }
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "bg.color": "cdcdcd",
                    "color": "6c6c6c",
                    "margin.top": 10,
                    "size.h": 50,
                    "size.w": 280,
                    "text": "Dial Value: [[customDial.value]]",
                    "touch.bg.color": "cdcdcd",
                    "touch.color": "6c6c6c50"
                }
            },
            {
                "_id": "button",
                "_type": "Button",
                "actions": [
                    {
                        "_type": "Function",
                        "attributes": {
                            "_target": "customDial",
                            "functionName": "setValue"
                        },
                        "on": "touchUp",
                        "set": {
                            "animated": true,
                            "value": 50
                        }
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "bg.color": "cdcdcd",
                    "color": "6c6c6c",
                    "margin.top": 10,
                    "size.h": 50,
                    "size.w": 280,
                    "text": "Change Dial Value: 50",
                    "touch.bg.color": "cdcdcd",
                    "touch.color": "6c6c6c50"
                }
            },
            {
                "_id": "button",
                "_type": "Button",
                "actions": [
                    {
                        "_type": "Function",
                        "attributes": {
                            "_target": "customDial",
                            "functionName": "setValue"
                        },
                        "on": "touchUp",
                        "set": {
                            "animated": true,
                            "value": 100
                        }
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "bg.color": "cdcdcd",
                    "color": "6c6c6c",
                    "margin.top": 10,
                    "size.h": 50,
                    "size.w": 280,
                    "text": "Change Dial Value: 100",
                    "touch.bg.color": "cdcdcd",
                    "touch.color": "6c6c6c50"
                }
            }
        ],
        "datasources": []
    }
}