{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#ffffff",
            "padding.top": 90,
            "statusBar.style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control_location": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXAttributedText"
                }
            },
            {
                "_id": "attributedText",
                "_type": "AttributedText",
                "actions": [
                    {
                        "_type": "Alert",
                        "attributes": {
                            "message": "[[$self.selectedMention]]",
                            "title": "You long_press'd:"
                        },
                        "on": "longPressMention"
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "align.v": "middle",
                    "layoutType": "absolute",
                    "size.w": "200",
                    "text": "Johnny, @paula, silly and @sally were #hoodwinked.",
                    "text.align": "center"
                }
            }
        ],
        "datasources": []
    }
}