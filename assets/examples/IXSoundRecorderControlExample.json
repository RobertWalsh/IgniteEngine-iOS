{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
         {
            "_id": "playText",
            "_type": "Text",
            "actions": [{
                    "on": "touch_up",
                    "_type": "Function",
                    "attributes": {
                        "_target": "soundRecorderControl",
                        "function_name": "start_recording"
                    }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Start Recording"
            }
         },
         {
            "_id": "pauseText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "soundRecorderControl",
                    "function_name": "pause_recording"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Pause Recording"
            }
         },
         {
             "_id": "resumeText",
             "_type": "Text",
             "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "soundRecorderControl",
                    "function_name": "resume_recording"
                }
             }],
             "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Resume Recording"
             }
        },
        {
            "_id": "stopText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "soundRecorderControl",
                    "function_name": "stop_recording"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Stop Recording"
            }
         },
         {
             "_id": "playRecordingText",
             "_type": "Text",
             "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "recordedSoundPlayer",
                    "function_name": "play"
                }
             }],
             "attributes": {
             "horizontal_alignment":"center",
             "layout_type": "relative",
             "text": "Play Recorded Sound"
             }
         },
         {
            "_id": "soundRecorderControl",
            "_type": "SoundRecorder",
            "actions": [{
                "on": "error",
                "_type": "Alert",
                "attributes": {
                    "title": "Sound Recorder Error",
                    "subtitle": "[[$self.last_error_message]]"
                }
            },{
                "NOTE" : "FORCE SOUND RELOAD OTHERWISE IT WONT GRAB THE SOUND FILE EACH TIME THE RECORDING REFRESHES BUT TURN IT BACK OFF AFTER SO IT WONT RELOAD EVERY TIME SETTINGS ARE APPLIED",
                "on": "finished",
                "_type": "Modify",
                "attributes": {
                    "_target": "recordedSoundPlayer"
                },
                "set": {
                    "force_sound_reload": true
                },
                "actions": [{
                    "on": "finished",
                    "_type": "Modify",
                    "attributes": {
                        "_target": "recordedSoundPlayer"
                    },
                    "set": {
                        "force_sound_reload": false
                    }
                }]
            }],
            "attributes": {
                "record_to_location": "docs://someSound.caf",
                "volume": 1,
                "number_of_loops": 0,
                "auto_play": false
            }
         },
         {
            "_id": "recordedSoundPlayer",
            "_type": "Sound",
            "attributes": {
                "sound_location": "docs://someSound.caf",
                "volume": 1,
                "number_of_loops": 0,
                "auto_play": false
            }
        }
        ]
    }
}