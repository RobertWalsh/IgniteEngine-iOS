{
    "view": {
        "attributes": {
            "background": {}, 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "playText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundRecorderControl", 
                            "function_name": "start_recording"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "pauseText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundRecorderControl", 
                            "function_name": "pause_recording"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "resumeText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundRecorderControl", 
                            "function_name": "resume_recording"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "stopText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "soundRecorderControl", 
                            "function_name": "stop_recording"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "playRecordingText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "recordedSoundPlayer", 
                            "function_name": "play"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "soundRecorderControl", 
                "_type": "SoundRecorder", 
                "actions": [
                    {
                        "_type": "Alert", 
                        "attributes": {
                            "subtitle": "[[$self.last_error_message]]"
                        }, 
                        "on": "error"
                    }, 
                    {
                        "NOTE": "FORCE SOUND RELOAD OTHERWISE IT WONT GRAB THE SOUND FILE EACH TIME THE RECORDING REFRESHES BUT TURN IT BACK OFF AFTER SO IT WONT RELOAD EVERY TIME SETTINGS ARE APPLIED", 
                        "_type": "Modify", 
                        "actions": [
                            {
                                "_type": "Modify", 
                                "attributes": {
                                    "_target": "recordedSoundPlayer"
                                }, 
                                "on": "finished", 
                                "set": {
                                    "forceAudioReload.enabled": false
                                }
                            }
                        ], 
                        "attributes": {
                            "_target": "recordedSoundPlayer"
                        }, 
                        "on": "finished", 
                        "set": {
                            "forceAudioReload.enabled": true
                        }
                    }
                ], 
                "attributes": {
                    "autoPlay.enabled": false, 
                    "repeatCount": 0, 
                    "savePath": "docs://someSound.caf"
                }
            }, 
            {
                "_id": "recordedSoundPlayer", 
                "_type": "Sound", 
                "attributes": {
                    "audioUrl": "docs://someSound.caf", 
                    "autoPlay.enabled": false, 
                    "repeatCount": 0
                }
            }
        ]
    }
}