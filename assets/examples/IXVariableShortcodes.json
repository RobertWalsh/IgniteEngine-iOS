{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "bg.color": "#f8f8f8",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "Variable Shortcodes"
        }
      },
      {
        "_id": "layoutMain",
        "_type": "Layout",
        "attributes": {
          "padding": 15,
          "size.w": "100%",
          "size.h": "100%"
        },
        "controls": [
          {
            "_id": "layoutUrlEncode",
            "_type": "Layout",
            "attributes": {
              "align.h":"center"
            },
            "controls": [
              {
                "_id": "textToUrlEncode",
                "_type": "Text",
                "attributes": {
                  "font": "HelveticaNeue:15",
                  "color": "#000000",
                  "text": "[[$self.string]]",
                  "text.align": "center",
                  "string": "This is a string.",
                  "size.w": "100%"
                }
              },
              {
                "_id": "button",
                "_type": "Button",
                "actions": [
                  {
                    "_type": "Modify",
                    "on": "touchUp",
                    "attributes": {
                      "_target": "textToUrlEncode"
                    },
                    "set": {
                      "text": "[[textToUrlEncode.string:base64.encode]]"
                    }
                  }
                ],
                "attributes": {
                  "size.w": 200,
                  "size.h": 50,
                  "color": "6c6c6c",
                  "bg.color": "cdcdcd",
                  "touch.color": "6c6c6c50",
                  "align.h": "center",
                  "touch.bg.color": "cdcdcd",
                  "margin.top": 10,
                  "text": "URL Encode"
                }
              },
              {
                "_id": "button",
                "_type": "Button",
                "actions": [
                  {
                    "_type": "Modify",
                    "on": "touchUp",
                    "attributes": {
                      "_target": "textToUrlEncode"
                    },
                    "set": {
                      "text": "[[textToUrlEncode.text:base64.decode]]"
                    }
                  }
                ],
                "attributes": {
                  "size.w": 200,
                  "size.h": 50,
                  "margin.top": 10,
                  "color": "6c6c6c",
                  "bg.color": "cdcdcd",
                  "touch.color": "6c6c6c50",
                  "align.h": "center",
                  "touch.bg.color": "cdcdcd",
                  "text": "URL Decode"
                }
              }
            ]
          }
        ]
      }
    ],
    "datasources": []
  }
}