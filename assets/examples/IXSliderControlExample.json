{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
         {
            "_id": "sliderValueText",
            "_type": "Text",
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Slider Value : [[customSlider.value]]"
            }
         },
         {
            "_id": "sliderStatusText",
            "_type": "Text",
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Slider Drag Status : Not Dragging"
            }
         },
         {
            "_id": "changeValueText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "customSlider",
                    "function_name": "update_slider_value",
                },
                "set" : {
                    "value" : "5",
                    "animated" : true
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Update Slider Value to 5"
            }
         },
         {
            "_id": "customSlider",
            "_type": "Slider",
            "actions": [{
                "on": "value_changed",
                "_type": "Refresh",
                "attributes": {
                    "_target": "sliderValueText"
                }
            },{
                "on": "touch",
                "_type": "Modify",
                "attributes": {
                    "_target": "sliderStatusText"
                },
                "set": {
                    "text": "Slider Drag Status : Dragging"
                }
            },{
                "on": "touch_up",
                "_type": "Modify",
                "attributes": {
                    "_target": "sliderStatusText"
                },
                "set": {
                    "text" : "Slider Drag Status : Not Dragging"
                }
            }],
            "attributes": {
                "width": 500,
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "initial_value": 5,
                "minimum_value": 0,
                "maximum_value": 10,
                "images" : {
                     "minimum" : "images/slider_images.min_20x22.png",
                     "minimum.capInsets" : "{0,12,0,0}",
                     "maximum" : "images/slider_images.max_20x22.png",
                     "maximum.capInsets" : "{0,0,0,12}",
                     "thumb" : "images/slider_tab.png"
                }
            }
         }
        ]
    }
}