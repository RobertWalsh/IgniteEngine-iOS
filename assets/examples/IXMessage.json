{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#ffffff",
            "padding.top": 70,
            "statusBar.style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control_location": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXMessage"
                }
            },
            {
                "_id": "messageTest",
                "_type": "Message",
                "actions": [
                    {
                        "_type": "Alert",
                        "attributes": {
                            "title": "Message sent!"
                        },
                        "on": "success"
                    },
                    {
                        "_type": "Alert",
                        "attributes": {
                            "title": "Message cancelled!"
                        },
                        "on": "cancelled"
                    }
                ],
                "attributes": {
                    "to": "info@apigee.com",
                    "type": "text"
                }
            },
            {
                "_id": "button",
                "_type": "Button",
                "actions": [
                    {
                        "_type": "Function",
                        "attributes": {
                            "_target": "messageTest",
                            "functionName": "present.email"
                        },
                        "on": "touchUp"
                    }
                ],
                "attributes": {
                    "align.h": "center",
                    "align.v": "middle",
                    "bg.color": "cdcdcd",
                    "border.radius": 0,
                    "color": "6c6c6c",
                    "layoutType": "absolute",
                    "size.h": 50,
                    "size.w": 200,
                    "text": "send an email.",
                    "touch.bg.color": "cdcdcd",
                    "touch.color": "6c6c6c50"
                }
            }
        ],
        "datasources": []
    }
}