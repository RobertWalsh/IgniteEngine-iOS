{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
         {
            "_id": "startAnimationText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "animatedImageControl",
                    "function_name": "start_animation"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Start Animation"
            }
         },
         {
            "_id": "stopAnimationText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "animatedImageControl",
                    "function_name": "stop_animation"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Stop Animation"
            }
         },
         {
            "_id": "animatedImageControl",
            "_type": "Image",
            "attributes": {
                "width": "100%",
                "height": "400",
                "horizontal_alignment":"center",
                "images.default" : [
                    "images/fireplace_on.gif"
                ]
            }
         }
        ]
    }
}