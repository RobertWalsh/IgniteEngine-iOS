{
    "view": {
        "attributes": {
            "background": {}, 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "startAnimationText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "animatedImageControl", 
                            "function_name": "start_animation"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "stopAnimationText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "animatedImageControl", 
                            "function_name": "stop_animation"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "animatedImageControl", 
                "_type": "Image", 
                "attributes": {
                    "align.h": "center", 
                    "image": [
                        "images/fireplace_on.gif"
                    ], 
                    "size.h": "400", 
                    "size.w": "100%"
                }
            }
        ]
    }
}