{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "background": {
        "color": "#ffffff"
      },
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "custom/header.json",
          "layout_type": "float",
          "height": 50,
          "width": "100%",
          "margin.top": 20,
          "title": "GIF Example"
        }
      },
      {
        "_id": "animatedImageControl",
        "_type": "Image",
        "attributes": {
          "width": 280,
          "height": 137,
          "horizontal_alignment": "center",
          "images.default": [
            "images/fireplace_on.gif"
          ]
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "animatedImageControl",
              "function_name": "start_animation"
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Start Animation"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "animatedImageControl",
              "function_name": "stop_animation"
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Stop Animation"
        }
      }
    ],
    "data_providers": []
  }
}