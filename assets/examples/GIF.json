{
    "view": {
        "attributes": {
            "_id": "test", 
            "background": {}, 
            "status_bar_style": "dark"
        }, 
        "controls": [
            {
                "_id": "customHeader", 
                "_type": "Custom", 
                "attributes": {
                    "control_location": "custom/header.json", 
                    "layoutType": "float", 
                    "size.h": 50, 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "animatedImageControl", 
                "_type": "Image", 
                "attributes": {
                    "align.h": "center", 
                    "image": [
                        "images/fireplace_on.gif"
                    ], 
                    "size.h": 137, 
                    "size.w": 280
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "animatedImageControl", 
                            "function_name": "start_animation"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "bg.color": "cdcdcd", 
                    "border.size": 2, 
                    "color": "6c6c6c", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }, 
            {
                "_id": "button", 
                "_type": "Button", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "animatedImageControl", 
                            "function_name": "stop_animation"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "bg.color": "cdcdcd", 
                    "border.size": 2, 
                    "color": "6c6c6c", 
                    "size.h": 50, 
                    "size.w": 280, 
                    "touch.background.color": "cdcdcd", 
                    "touch.text.color": "6c6c6c50"
                }
            }
        ], 
        "data_providers": []
    }
}