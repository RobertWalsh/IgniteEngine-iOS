{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "bg.color":"#ffffff",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "IXAlertAction"
        }
      },
      {
        "_id": "layoutButtons",
        "_type": "Layout",
        "attributes": {
          "layoutType": "absolute",
          "align.h": "center",
          "align.v": "middle"
        },
        "controls": [
          {
            "_id": "button",
            "_type": "Button",
            "actions": [
              {
                "_type": "Alert",
                "on": "touchUp",
                "enabled": true,
                "attributes": {
                  "title": "touchUp",
                  "message": "You touched the button!"
                }
              }
            ],
            "attributes": {
              "size.w": 150,
              "size.h": 50,
              "color": "6c6c6c",
              "bg.color": "cdcdcd",
              "touch.color": "6c6c6c50",
              "touch.bg.color": "cdcdcd",
              "margin.top": 15,
              "text": "simple alert."
            }
          },
          {
            "_id": "button",
            "_type": "Button",
            "actions": [
              {
                "_type": "Alert",
                "on": "touchUp",
                "enabled": true,
                "actions":[
                  {
                    "_type": "Alert",
                    "on": "button.0.pressed",
                    "enabled": true,
                    "actions":[
                    ],
                    "attributes": {
                      "title": "touchUp",
                      "message": "You touched button0!"
                    }
                  },
                  {
                    "_type": "Alert",
                    "on": "button.1.pressed",
                    "enabled": true,
                    "actions":[
                    ],
                    "attributes": {
                      "title": "touchUp",
                      "message": "You touched button1!"
                    }
                  }
                ],
                "attributes": {
                  "title": "touchUp",
                  "message": "You touched the button!",
                  "button.titles": "button0,button1"
                }
              }
            ],
            "attributes": {
              "size.w": 150,
              "size.h": 50,
              "color": "6c6c6c",
              "bg.color": "cdcdcd",
              "touch.color": "6c6c6c50",
              "touch.bg.color": "cdcdcd",
              "margin.top": 15,
              "text": "fancy alert."
            }
          }
        ]
      }
    ],
    "datasources": []
  }
}