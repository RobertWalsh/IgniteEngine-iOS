{
    "view": {
        "attributes": {
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
         {
             "_type": "Text",
             "attributes": {
                "text":"Model: [[device.model]]",
                "horizontal_alignment":"center",
                "layout_type": "relative",
             }
         },
         {
             "_type": "Text",
             "attributes": {
                "text":"Type: [[device.type]]",
                "horizontal_alignment":"center",
                "layout_type": "relative"
             }
         },
         {
             "_type": "Text",
             "attributes": {
                "text":"Current Orientation: [[device.orientation]]",
                "horizontal_alignment":"center",
                "layout_type": "relative"
             }
         },
         {
             "_type": "Text",
             "attributes": {
                "text":"Screen Size: ( [[device.screen.width]],[[device.screen.height]] )",
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "margin.top":30
             }
         },
         {
             "_type": "Text",
             "attributes": {
                 "text":"Screen Scale: [[device.screen.scale]]",
                 "horizontal_alignment":"center",
                 "layout_type": "relative"
             }
         },
         {
             "_type": "Text",
             "attributes": {
                 "text":"OS Version: [[device.os.version]]",
                 "horizontal_alignment":"center",
                 "layout_type": "relative",
                 "margin.top":30
             }
         },
         {
             "_type": "Text",
             "attributes": {
                 "text":"OS Version Major: [[device.os.version.major]]",
                 "horizontal_alignment":"center",
                 "layout_type": "relative"
             }
         },
         {
             "_type": "Text",
             "attributes": {
                 "text":"OS Version Integer: [[device.os.version.integer]]",
                 "horizontal_alignment":"center",
                 "layout_type": "relative"
             }
         }
        ]
    }
}