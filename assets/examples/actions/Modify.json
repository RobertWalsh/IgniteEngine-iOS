{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#f8f8f8",
            "padding.top": 90,
            "statusBar.style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control.url": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXModify"
                }
            },
            {
                "_id": "layoutButtons",
                "_type": "Layout",
                "attributes": {
                    "align.h": "center",
                    "align.v": "middle",
                    "layoutType": "absolute"
                },
                "controls": [
                    {
                        "_id": "button0",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Modify",
                                "attributes": {
                                    "_target": "button1"
                                },
                                "enabled": true,
                                "on": "touchUp",
                                "set": {
                                    "text": "this is different."
                                }
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 280,
                            "text": "change button1 title",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    },
                    {
                        "_id": "button0",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Modify",
                                "attributes": {
                                    "_target": "session"
                                },
                                "enabled": true,
                                "on": "touchUp",
                                "set": {
                                    "title": "this uses a session var"
                                }
                            },
                            {
                                "_type": "Modify",
                                "attributes": {
                                    "_target": "button1"
                                },
                                "enabled": true,
                                "on": "touchUp",
                                "set": {
                                    "text": "[[session.title]]"
                                }
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 280,
                            "text": "set var, change title",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    },
                    {
                        "_id": "button1",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Alert",
                                "attributes": {
                                    "message": "[[$self.text]]",
                                    "title": "[[$self._id]]"
                                },
                                "enabled": true,
                                "on": "touchUp"
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 280,
                            "text": "button1 title",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    }
                ]
            }
        ],
        "datasources": []
    }
}