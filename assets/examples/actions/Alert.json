{
    "view": {
        "attributes": {
            "_id": "test",
            "bg.color": "#ffffff",
            "padding.top": 90,
            "statusBar.style": "dark"
        },
        "controls": [
            {
                "_id": "customHeader",
                "_type": "Custom",
                "attributes": {
                    "control.url": "../custom/header.json",
                    "layoutType": "float",
                    "margin.top": 20,
                    "size.h": 50,
                    "size.w": "100%",
                    "title": "IXAlert"
                }
            },
            {
                "_id": "layoutButtons",
                "_type": "Layout",
                "attributes": {
                    "align.h": "center",
                    "align.v": "middle",
                    "layoutType": "absolute"
                },
                "controls": [
                    {
                        "_id": "button",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Alert",
                                "attributes": {
                                    "message": "You touched the button!",
                                    "title": "touchUp"
                                },
                                "enabled": true,
                                "on": "touchUp"
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 150,
                            "text": "simple alert.",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    },
                    {
                        "_id": "button",
                        "_type": "Button",
                        "actions": [
                            {
                                "_type": "Alert",
                                "actions": [
                                    {
                                        "_type": "Alert",
                                        "actions": [],
                                        "attributes": {
                                            "message": "You touched button0!",
                                            "title": "touchUp"
                                        },
                                        "enabled": true,
                                        "on": "button.0.pressed"
                                    },
                                    {
                                        "_type": "Alert",
                                        "actions": [],
                                        "attributes": {
                                            "message": "You touched button1!",
                                            "title": "touchUp"
                                        },
                                        "enabled": true,
                                        "on": "button.1.pressed"
                                    }
                                ],
                                "attributes": {
                                    "button.titles": "button0,button1",
                                    "message": "You touched the button!",
                                    "title": "touchUp"
                                },
                                "enabled": true,
                                "on": "touchUp"
                            }
                        ],
                        "attributes": {
                            "bg.color": "cdcdcd",
                            "color": "6c6c6c",
                            "margin.top": 15,
                            "size.h": 50,
                            "size.w": 150,
                            "text": "fancy alert.",
                            "touch.bg.color": "cdcdcd",
                            "touch.color": "6c6c6c50"
                        }
                    }
                ]
            }
        ],
        "datasources": []
    }
}