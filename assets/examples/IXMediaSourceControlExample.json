{
    "view": {
        "attributes": {
            "background": {}, 
            "size.h": "100%", 
            "size.w": "100%"
        }, 
        "controls": [
            {
                "_id": "showMediaSourceText", 
                "_type": "Text", 
                "actions": [
                    {
                        "_type": "Function", 
                        "attributes": {
                            "_target": "mediaSourceControl", 
                            "function_name": "present_picker"
                        }, 
                        "on": "touch_up"
                    }
                ], 
                "attributes": {
                    "align.h": "center", 
                    "layoutType": "relative"
                }
            }, 
            {
                "_id": "imageControl", 
                "_type": "Image", 
                "attributes": {
                    "align.h": "center", 
                    "image": "[[mediaSourceControl.selected_media]]", 
                    "size.h": "80%", 
                    "size.w": "100%"
                }
            }, 
            {
                "_id": "mediaSourceControl", 
                "_type": "MediaSource", 
                "attributes": {
                    "align.h": "center", 
                    "size.h": "400", 
                    "size.w": "100%"
                }
            }
        ]
    }
}