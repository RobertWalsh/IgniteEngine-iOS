{
    "view": {
        "attributes": {
            "height": "100%",
            "width": "100%",
            "padding.top": 100,
            "background": {
				"color": "#FFFFFF"
			}
        },
        "controls": [
         {
            "_id": "showMediaSourceText",
            "_type": "Text",
            "actions": [{
                "on": "touch_up",
                "_type": "Function",
                "attributes": {
                    "_target": "mediaSourceControl",
                    "function_name": "present_picker"
                }
            }],
            "attributes": {
                "horizontal_alignment":"center",
                "layout_type": "relative",
                "text": "Show Media Source"
            }
         },
         {
             "_id": "imageControl",
             "_type": "Image",
             "attributes": {
                "width": "100%",
                "height": "80%",
                "horizontal_alignment":"center",
                "images.default" : "[[mediaSourceControl.selected_media]]"
             }
         },
         {
            "_id": "mediaSourceControl",
            "_type": "MediaSource",
            "attributes": {
                "width": "100%",
                "height": "400",
                "horizontal_alignment": "center"
            }
         }
        ]
    }
}