{
  "view": {
    "attributes": {
      "_id": "test",
      "padding.top": 90,
      "background": {
        "color": "#ffffff"
      },
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "custom/header.json",
          "layout_type": "float",
          "height": 50,
          "width": "100%",
          "margin.top": 20,
          "title": "Sound Example"
        }
      },
      {
        "_id": "scannerControl",
        "_type": "Scan",
        "actions": [
          {
            "on": "scanned",
            "_type": "Alert",
            "attributes": {
              "title": "scannerControl"
            }
          }
        ],
        "attributes": {
          "sound_location": "sounds/Slow Rise.m4r",
          "volume": 1,
          "number_of_loops": 0,
          "auto_play": false
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "scannerControl",
              "function_name": "present_reader"
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Play Sound"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "soundControl",
              "function_name": "pause"
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Pause Sound"
        }
      },
      {
        "_id": "button",
        "_type": "Button",
        "actions": [
          {
            "on": "touch_up",
            "_type": "Function",
            "attributes": {
              "_target": "soundControl",
              "function_name": "stop"
            }
          }
        ],
        "attributes": {
          "width": 280,
          "height": 50,
          "text.color": "6c6c6c",
          "background.color": "cdcdcd",
          "touch.text.color": "6c6c6c50",
          "horizontal_alignment": "center",
          "touch.background.color": "cdcdcd",
          "margin.top": 10,
          "border.radius": 5,
          "border.width": 2,
          "border.color": "6c6c6c",
          "text": "Stop Sound"
        }
      }
    ],
    "data_providers": []
  }
}