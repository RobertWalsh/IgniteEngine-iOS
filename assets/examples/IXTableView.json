{
  "view": {
    "actions": [],
    "attributes": {
      "_id": "test",
      "bg.color":"#ffffff",
      "status_bar_style": "dark"
    },
    "controls": [
      {
        "_id": "customHeader",
        "_type": "Custom",
        "attributes": {
          "control_location": "../custom/header.json",
          "layoutType": "float",
          "size.h": 50,
          "size.w": "100%",
          "margin.top": 20,
          "title": "TableView Example"
        }
      },
      {
        "_id": "tableSettings",
        "_type": "TableView",
        "attributes": {
          "fill_remaining_size.h": true,
          "separator.style": "none",
          "bg.color": "#5A5A5A",
          "datasourceid": "test_data",
          "enabled": true,
          "autofill.w": true,
          "margin.top": 70,
          "cell.size.h": 50,
          "cell.size.w": "100%",
          "bg.color":"[[app.color]]"
        },
        "controls": [
          {
            "_type": "Layout",
            "actions": [
              {
                "_type": "Alert",
                "attributes": {
                  "title": "You touched: [[dataRow.name]] ([[dataRow.abbreviation]])"
                },
                "enabled": false,
                "on": "touchUp"
              },
              {
                "_type": "Navigate",
                "attributes": {
                  "to": "Social.json",
                  "nav_stack_type":"push",
                  "nav_animation_type":"cross_dissolve",
                  "nav_animation_duration":0
                },
                "enabled": true,
                "on": "touchUp"
              }
            ],
            "attributes": {
              "layoutFlow": "horizontal",
              "layoutType": "absolute",
              "align.v": "middle"
            },
            "controls": [
              {
                "_type": "Text",
                "attributes": {
                  "font": "HelveticaNeue-Light:22",
                  "color": "#6c6c6c",
                  "margin.left": 20,
                  "text": "[[dataRow.name]]"
                }
              },
              {
                "_type": "Text",
                "attributes": {
                  "font": "HelveticaNeue-Light:22",
                  "color": "#6c6c6c",
                  "margin.left": 5,
                  "text": "([[dataRow.abbreviation]])"
                }
              }
            ]
          },
          {
            "_type": "Image",
            "attributes": {
              "align.h": "right",
              "layoutType": "absolute",
              "size.w": 50,
              "size.h": 50,
              "image": "../images/btn_chevron_50x50.png"
            }
          },
          {
            "_type": "Layout",
            "attributes": {
              "size.h": 1,
              "size.w": "100%",
              "layoutType": "float",
              "align.v": "bottom",
              "bg.color": "#cdcdcd"
            }
          }
        ]
      }
    ],
    "datasources": [
      {
        "_id": "test_data",
        "_type": "JSON",
        "actions": [
          {
            "_type": "Refresh",
            "on": [
              "success",
              "fail"
            ],
            "attributes": {
              "_target": "tableSettings"
            }
          },
          {
            "_type": "Alert",
            "attributes": {
              "title": "Status Code: [[test_data.status_code]] Response: [[test_data.raw_data_response]]"
            },
            "enabled": true,
            "on": "fail,success"
          }
        ],
        "attributes": {
          "autoLoad.enabled": true,
          "baseUrl": "../data/states.json",
          "pathSuffix": "",
          "http.method": "GET",
          "objects_path": ""
        }
      }
    ]
  }
}