{
    "view": {
        "attributes": {
            "_id": "photoSearch", 
            "bg.color": "#fff000", 
            "status_bar_style": "light"
        }, 
        "controls": [
            {
                "_id": "layoutMain", 
                "_type": "Layout", 
                "attributes": {
                    "bg.color": "#000000", 
                    "layoutType": "absolute", 
                    "size.h": "100%", 
                    "size.w": "100%"
                }, 
                "controls": [
                    {
                        "_id": "layoutHeader", 
                        "_type": "Layout", 
                        "attributes": {
                            "layoutType": "absolute", 
                            "size.h": 70, 
                            "size.w": "100%"
                        }, 
                        "controls": [
                            {
                                "_id": "title", 
                                "_type": "Text", 
                                "attributes": {
                                    "align.h": "center", 
                                    "align.v": "bottom", 
                                    "color": "ffffff", 
                                    "layoutType": "float", 
                                    "size.h": 50, 
                                    "size.w": "100%", 
                                    "text.align": "center"
                                }
                            }
                        ]
                    }, 
                    {
                        "_id": "layoutSearch", 
                        "_type": "Layout", 
                        "attributes": {
                            "bg.color": "ffffff50", 
                            "layoutType": "absolute", 
                            "size.h": 42, 
                            "size.w": "100%"
                        }, 
                        "controls": [
                            {
                                "_id": "textInputTest", 
                                "_type": "TextInput", 
                                "actions": [
                                    {
                                        "_type": "Modify", 
                                        "attributes": {
                                            "_target": "session"
                                        }, 
                                        "on": "text_changed,got_focus", 
                                        "set": {
                                            "text_to_speak": "[[$self.text]]"
                                        }
                                    }
                                ], 
                                "attributes": {
                                    "align.h": "left", 
                                    "border.size": 1, 
                                    "color": "#6c6c6c", 
                                    "multiline.enabled": false, 
                                    "placeholder.text": "Duration", 
                                    "size.h": "100%", 
                                    "size.w": 257, 
                                    "text.align": "center", 
                                    "text.default": 0.75
                                }
                            }, 
                            {
                                "_id": "imageTest", 
                                "_type": "Image", 
                                "actions": [
                                    {
                                        "_type": "Alert", 
                                        "attributes": {
                                            "message": "Sized to [[$self.actual.width]]pt x [[$self.actual.height]]pt."
                                        }, 
                                        "on": "touch_up"
                                    }
                                ], 
                                "attributes": {
                                    "align.h": "right", 
                                    "align.v": "middle", 
                                    "image": "/images/btn_search_55x38.png", 
                                    "layoutType": "absolute", 
                                    "size.h": 38, 
                                    "size.w": 55
                                }
                            }
                        ]
                    }
                ]
            }
        ], 
        "data_providers": []
    }
}